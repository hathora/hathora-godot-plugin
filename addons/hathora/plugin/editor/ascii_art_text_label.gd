@tool
extends RichTextLabel

var frame = 0

func _ready() -> void:
	add_theme_font_override("normal_font", get_theme_font("output_source", "EditorFonts"))
	add_theme_color_override("default_color", get_theme_color("axis_y_color", "Editor"))
	add_theme_font_size_override("normal_font_size", get_theme_font_size("rulers_size", "EditorFonts"))
	add_theme_stylebox_override("normal", get_theme_stylebox("background", "EditorHelp"))
	add_theme_stylebox_override("focus", get_theme_stylebox("background", "EditorHelp"))


func show_art() -> void:
	if frame == 0:
		show()
		grab_focus()

	if frame < len(frames):
		text = frames[frame]
		await get_tree().create_timer(0.1).timeout
		frame += 1
		show_art()
		return

	else:
		hide()
		frame = 0


